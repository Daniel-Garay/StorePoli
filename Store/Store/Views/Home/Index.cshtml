<script>
    function Limpiar() {
        document.getElementById("zonaLacteos").style.display = "none";
        document.getElementById("zonaCarnes").style.display = "none";
        document.getElementById("zonaBebidas").style.display = "none";
        document.getElementById("zonaFrutas").style.display = "none";
    }

    function MostrarProductos(opcion) {
        Limpiar();

        
        switch (opcion) {
            case 'Carnicos':
                document.getElementById("zonaCarnes").style.display = "flex"
                break;
            case 'Bebidas':
                document.getElementById("zonaBebidas").style.display = "flex"
                break;
            case 'Frutas':
                document.getElementById("zonaFrutas").style.display = "flex"
                break;
            default:
                document.getElementById("zonaLacteos").style.display = "flex"
       }

        
    }
</script>